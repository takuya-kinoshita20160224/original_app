<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新規登録
    </h1>
  </div>
  <div class="registration-form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :family_name, class:"input-name", id:"family_name", placeholder:"例) 山田" %>
      <%= f.text_area :last_name, class:"input-name", id:"last_name", placeholder:"例) 陸太郎" %>
    </div>
  </div>
  <div class="registration-form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前カナ(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :family_name_phonetic, class:"input-name", id:"family_name_phonetic", placeholder:"例) ヤマダ" %>
      <%= f.text_area :last_name_phonetic, class:"input-name", id:"last_name_phonetic", placeholder:"例) リクタロウ" %>
    </div>
  </div>
  <div class="registration-form-group">
    <div class='register-form-text-wrap'>
      <label class="register-form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="registration-form-group">
    <div class='register-form-text-wrap'>
      <label class="register-form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="registration-form-group">
    <div class='register-form-text-wrap'>
      <label class="register-form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>

